        crossorigin="anonymous")
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let mazdaid = toShow._id 
    - let mazdacost = toShow.cost 
    - let mazdamodel = toShow.model 
    - let mazdacolor = toShow.color 
    - let actionid = "/resource/mazda/" + mazdaid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='mazdaAttr mr-3') mazda ID is: 
        div #{mazdaid} 
      div.row 
        div(class='mazdaAttr mr-3') mazda Cost is: 
        div #{mazdacost} 
      div.row 
        div(class='mazdaAttr mr-3') mazda Model is: 
        div #{mazdamodel} 
      div.row 
        div(class='mazdaAttr mr-3') mazda Color is: 
        div #{mazdacolor} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the mazda collection 
      window.location.href='/mazda' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/mazda' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 